#!/bin/sh /etc/rc.common

START=99
USE_PROCD=1

start_service()
{
	procd_open_instance

	procd_set_param env ZIGBEE2MQTT_DATA=/etc/zigbee2mqtt/ NODE_OPTIONS=--insecure-http-parser
	procd_set_param command node /opt/zigbee2mqtt/index.js
	procd_set_param respawn
	procd_set_param stdout 1
	procd_set_param stderr 1
	procd_set_param term_timeout 60
	procd_close_instance
}
